{
  "name": "pota",
  "description": "pota is a small and pluggable Reactive Web Renderer.",
  "version": "0.18.183",
  "author": "Tito Bouzout",
  "homepage": "https://pota.quack.uy/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/potahtml/pota.git"
  },
  "type": "module",
  "types": "./pota.d.ts",
  "main": "./src/exports.js",
  "sideEffects": false,
  "exports": {
    "./babel-preset": {
      "require": "./src/babel-preset/index.cjs",
      "import": "./src/babel-preset/index.js",
      "default": "./src/babel-preset/index.js"
    },
    "./jsx-runtime": {
      "types": "./src/jsx/jsx.d.ts",
      "default": "./src/jsx/jsx-runtime.js"
    },
    "./jsx-dev-runtime": {
      "types": "./src/jsx/jsx.d.ts",
      "default": "./src/jsx/jsx-runtime.js"
    },
    "./xml": {
      "types": "./types/core/xml.d.ts",
      "default": "./src/core/xml.js"
    },
    "./components": {
      "types": "./types/components/@main.d.ts",
      "default": "./src/components/@main.js"
    },
    "./plugin/*": {
      "types": "./types/plugin/*.d.ts",
      "default": "./src/plugin/*.js"
    },
    "./store": {
      "types": "./types/lib/store.d.ts",
      "default": "./src/lib/store.js"
    },
    "./std": {
      "types": "./types/lib/std.d.ts",
      "default": "./src/lib/std.js"
    },
    ".": {
      "types": "./pota.d.ts",
      "node": "./src/lib/reactive.js",
      "import": "./src/exports.js",
      "default": "./src/exports.js"
    }
  },
  "scripts": {
    "dev": "rimraf types/ && concurrently --kill-others \"npm:watch:*\"",
    "watch:types": "tsc -w",
    "watch:build": "cd src/babel-preset && rollup -c -w",
    "types": "tsc",
    "build": "cd src/babel-preset && rollup -c",
    "postinstall": "npm run build",
    "prepublishOnly": "npm run types || echo 1",
    "release": "node src/release/release.mjs"
  },
  "dependencies": {
    "@babel/plugin-syntax-jsx": "^7.25.9",
    "@rollup/plugin-terser": "^0.4.4",
    "concurrently": "^9.1.0",
    "csstype": "^3.1.3",
    "parse5": "^7.2.1",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "@babel/core": "^7.26.0",
    "colorjs.io": "^0.4.5"
  },
  "devDependencies": {
    "rollup": "^4.29.1",
    "typescript": "^5.7.2"
  },
  "prettier": {
    "printWidth": 70,
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "never",
    "endOfLine": "lf",
    "singleAttributePerLine": true,
    "embeddedLanguageFormatting": "off"
  }
}
