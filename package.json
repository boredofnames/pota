{
  "name": "pota",
  "description": "pota is a small and pluggable Reactive Web Renderer for Reactive Libraries.",
  "version": "0.3.6",
  "author": "Tito Bouzout",
  "type": "module",
  "types": "./ts.pota.d.ts",
  "main": "./src/exports.js",
  "module": "./src/exports.js",
  "exports": {
    "./*": null,
    ".": {
      "types": "./types/src/exports.d.ts",
      "default": "./src/exports.js"
    },
    "./babel-preset": "./babel-preset/index.cjs",
    "./jsx-runtime": {
      "types": "./ts.jsx.d.ts",
      "default": "./src/renderer/jsx-runtime.js"
    },
    "./jsx-dev-runtime": {
      "types": "./ts.jsx.d.ts",
      "default": "./src/renderer/jsx-runtime.js"
    },
    "./router": {
      "types": "./types/src/components/router/@main.d.ts",
      "default": "./src/components/router/@main.js"
    },
    "./hooks": {
      "types": "./types/src/hooks/@main.d.ts",
      "default": "./src/hooks/@main.js"
    },
    "./hooks/*": {
      "types": "./types/src/hooks/*",
      "default": "./src/hooks/*"
    },
    "./lib": {
      "types": "./types/src/lib/exports.d.ts",
      "default": "./src/lib/exports.js"
    },
    "./lib/*": {
      "types": "./types/src/lib/*",
      "default": "./src/lib/*"
    },
    "./color": {
      "types": "./types/src/color/@main.d.ts",
      "default": "./src/color/@main.js"
    },
    "./events": {
      "types": "./types/src/events/@main.d.ts",
      "default": "./src/events/@main.js"
    },
    "./random": {
      "types": "./types/src/random/@main.d.ts",
      "default": "./src/random/@main.js"
    },
    "./scroll": {
      "types": "./types/src/scroll/@main.d.ts",
      "default": "./src/scroll/@main.js"
    },
    "./streams": {
      "types": "./types/src/streams/@main.d.ts",
      "default": "./src/streams/@main.js"
    },
    "./strings": {
      "types": "./types/src/strings/@main.d.ts",
      "default": "./src/strings/@main.js"
    },
    "./time": {
      "types": "./types/src/time/@main.d.ts",
      "default": "./src/time/@main.js"
    },
    "./urls": {
      "types": "./types/src/urls/@main.d.ts",
      "default": "./src/urls/@main.js"
    }
  },
  "scripts": {
    "dev": "concurrently --kill-others \"npm:watch:*\"",
    "types": "tsc",
    "watch:types": "tsc -w",
    "standalone": "cd dist.standalone && rollup -c",
    "watch:standalone": "cd dist.standalone && rollup -c -w",
    "prepublishOnly": "npm run types || npm run standalone || echo 1"
  },
  "dependencies": {
    "@babel/plugin-transform-react-jsx": "^7.22.5",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "flimsy": "^1.0.3",
    "oby": "^14.3.5",
    "solid-js": "1.x"
  },
  "peerDependencies": {
    "@babel/core": "7.x",
    "colorjs.io": "^0.4.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.2.2",
    "rollup": "^4.1.4",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4"
  },
  "homepage": "https://pota.quack.uy/",
  "repository": {
    "type": "git",
    "url": "https://github.com/potaorg/pota"
  },
  "prettier": {
    "printWidth": 70,
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "never",
    "endOfLine": "lf",
    "singleAttributePerLine": true
  }
}
