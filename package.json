{
  "name": "pota",
  "description": "A Reactive HTML Renderer.",
  "version": "0.1.0",
  "author": "Tito Bouzout",
  "type": "module",
  "types": "./src/types.d.ts",
  "main": "./src/@main.js",
  "exports": {
    ".": "./src/@main.js",
    "./jsx-runtime": "./src/renderer/jsx-runtime.js",
    "./router/*": null,
    "./router": "./src/components/router/@main.js"
  },
  "imports": {
    "#main": "./src/@main.js",

    "#primitives": "./src/lib/reactivity/lib/solid.js",
    "#comp": "./src/lib/comp/@main.js",

    "#std": "./src/lib/std/@main.js",
    "#reactivity": "./src/lib/reactivity/@main.js",
    "#urls": "./src/lib/urls/@main.js",
    "#scroll": "./src/lib/scroll/@main.js",
    "#time": "./src/lib/time/@main.js",

    "#components/*": "./src/components/*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/titoBouzout/pota"
  },
  "prettier": {
    "printWidth": 70,
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "never",
    "endOfLine": "lf",
    "singleAttributePerLine": true
  }
}
