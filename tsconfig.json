{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "allowJs": true,
    /* you probably want to disable checkJs */
    "checkJs": true,
    "strict": true,
    "jsx": "react",
    "jsxFactory": "Component",
    "jsxFragmentFactory": "Fragment",
    "lib": ["ESNext", "dom", "dom.iterable"],
    "module": "es6",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "ESNext",
    "useDefineForClassFields": true
  },
  "exclude": ["./todo/*", "./dist/*", "./docs/*"]
}
