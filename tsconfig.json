{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "#main": ["./src/@main.js"],
      "#lib/*": ["./src/lib/*"],
      "#components/*": ["./src/components/*"]
    },

    "allowJs": true,
    /* you probably want to disable checkJs */
    "checkJs": true,
    "strict": true,

    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,

    "jsx": "react",
    "jsxFactory": "Component",
    "jsxFragmentFactory": "Fragment",

    "sourceMap": true
  },
  "exclude": ["./dist/*"]
}
