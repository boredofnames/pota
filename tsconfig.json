{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "types",

		"declaration": true,
		// helps to click "implementation" and go to the source code
		"declarationMap": true,
		"emitDeclarationOnly": true,

		"allowJs": true,
		"checkJs": true,
		"strict": true,

		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"resolveJsonModule": true,

		"jsx": "preserve",
		"jsxImportSource": "pota"
	},
	"include": ["src", "pota.d.ts"]
}
