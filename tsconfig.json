{
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "./types",

		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"strictNullChecks": false,
		"strictPropertyInitialization": false,

		"module": "NodeNext",
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"moduleResolution": "NodeNext",

		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,

		"jsx": "preserve",
		"jsxImportSource": "pota",

		"sourceMap": true
	},
	"include": ["src", "jsx.d.ts", "pota.d.ts"]
}
