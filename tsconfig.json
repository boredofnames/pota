{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "#main": ["./src/main.js"]
    },

    "allowJs": true,
    /* you probably want to disable checkJs */
    "checkJs": true,
    "strict": true,

    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "dom", "dom.iterable"],

    "jsx": "react",
    "jsxFactory": "Component",
    "jsxFragmentFactory": "Fragment",

    "sourceMap": true,

    "moduleResolution": "nodenext"
  },
  "exclude": ["./dist/*"]
}
