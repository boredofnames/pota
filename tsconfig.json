{
	"compilerOptions": {
		// DO NOT FIX rootDir it breaks autocomplete
		// "rootDir": ".",
		"outDir": "./types",
		"declaration": true,
		// helps to click "implementation" and go to the source code
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"sourceMap": false,

		"allowJs": true,
		"checkJs": true,
		"strict": true,

		"module": "NodeNext",
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,

		"jsx": "preserve",
		"jsxImportSource": "pota"
	},
	"include": ["src", "jsx.d.ts", "@main.d.ts", "pota.d.ts"]
}
