{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "jsx": "react",
    "jsxFactory": "createComponent",
    "jsxFragmentFactory": "createFragment",
    "lib": ["ESNext", "dom", "dom.iterable"],
    "module": "es6",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "ESNext",
    "useDefineForClassFields": true
  },
  "exclude": ["./todo/*", "./dist/*"]
}
